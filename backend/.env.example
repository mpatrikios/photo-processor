# ============================================
# TagSort Environment Configuration
# ============================================
# Copy this file to .env and update with your actual values
# NEVER commit the .env file to version control!

# ============================================
# Security Configuration (REQUIRED)
# ============================================

# JWT Secret Key - MUST be changed in production!
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# Google Cloud Vision API (REQUIRED for production)
# ============================================

# Option 1: Service account JSON file path
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# Option 2: Google Cloud project ID (if using default credentials)
# GOOGLE_CLOUD_PROJECT=your-project-id

# ============================================
# API Configuration
# ============================================

API_HOST=0.0.0.0
API_PORT=8000

# CORS Origins (comma-separated, no spaces)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# Database Configuration
# ============================================

# SQLite (default for development)
DATABASE_URL=sqlite:///./tag_photos.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/tagsort

# ============================================
# Email Configuration (OPTIONAL)
# ============================================

# Admin email for notifications
ADMIN_EMAIL=admin@example.com

# SMTP Configuration
# Use app-specific passwords or OAuth2, never use your main password!
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-specific-password
SMTP_USE_TLS=true

# Email service examples:
# Gmail: smtp.gmail.com:587 with TLS (requires app-specific password)
# Outlook: smtp.live.com:587 with TLS
# SendGrid: smtp.sendgrid.net:587 with TLS (use API key as password)

# ============================================
# Application Settings
# ============================================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (set to false in production)
DEBUG=false

# Maximum file upload size in MB
MAX_FILE_SIZE_MB=10

# Maximum files per upload
MAX_FILES_PER_UPLOAD=100

# Processing timeout in seconds
PROCESSING_TIMEOUT_SECONDS=300

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# ============================================
# Storage Configuration
# ============================================

# Local storage paths (will be created if they don't exist)
UPLOAD_DIR=uploads
EXPORT_DIR=exports
TEMP_DIR=temp

# S3 Configuration (optional, for cloud storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1

# ============================================
# Monitoring & Logging (OPTIONAL)
# ============================================

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional, defaults to stdout)
# LOG_FILE_PATH=logs/tagsort.log